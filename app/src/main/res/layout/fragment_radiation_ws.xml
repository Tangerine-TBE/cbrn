<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/title_bar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:background="@color/status"
        android:layout_height="60dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:padding="4dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_bar"
            android:text="浓度底噪:"
            android:textColor="#D1D1D0"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_value"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/tv1"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintBottom_toBottomOf="@id/tv1"
            android:textColor="#02C3A8"
            android:text="36"
            android:textSize="18sp"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/item_raditation_bg"
            android:layout_width="80dp"
            android:layout_height="40dp"/>
        <TextView
            app:layout_constraintBottom_toBottomOf="@id/tv1"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintStart_toEndOf="@id/et_value"
            android:background="@drawable/item_raditation_bg"
            android:layout_marginStart="4dp"
            android:drawableRight="@mipmap/ic_add"
            android:paddingEnd="4dp"
            android:layout_width="100dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:padding="4dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_bar"
            android:text="浓度底噪:"
            android:textColor="#D1D1D0"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/tv1"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintBottom_toBottomOf="@id/tv1"
            android:textColor="#02C3A8"
            android:text="0 / 2"
            android:textSize="18sp"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="40dp"/>
        <TextView
            app:layout_constraintBottom_toBottomOf="@id/tv1"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintStart_toEndOf="@id/et_value"
            android:background="@drawable/item_raditation_bg"
            android:layout_marginStart="4dp"
            android:text="彻底清楚所有污点"
            android:padding="8dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>