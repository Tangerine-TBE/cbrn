<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#22272D"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/zTitle"
        android:text="1."
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/zTitle"
        android:textColor="@color/white"
        android:text="单位及类型"
        android:id="@+id/fTitle"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fTitle"
        app:layout_constraintStart_toStartOf="@id/fTitle"
        android:textColor="@color/white"
        android:text="单位类型显示:"
        android:id="@+id/seTitle"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/thrTitle"
        app:layout_constraintStart_toEndOf="@id/seTitle"
        app:layout_constraintTop_toTopOf="@id/seTitle"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:text = "   CPS,  gay,  uSv/h"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@id/thrTitle"
        app:layout_constraintTop_toBottomOf="@id/thrTitle"
        android:background="@color/white"
        android:layout_height="1dp"/>
    <TextView
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/seTitle"
        app:layout_constraintStart_toStartOf="@id/seTitle"
        android:text="辐射类型显示:"
        android:id="@+id/forTitle"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/fiveTitle"
        app:layout_constraintStart_toEndOf="@id/forTitle"
        app:layout_constraintTop_toTopOf="@id/forTitle"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:text = "   x射线,  y射线,  B射线"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@id/fiveTitle"
        app:layout_constraintTop_toBottomOf="@id/fiveTitle"
        android:background="@color/white"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/sixTitle"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/forTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:text="2.污点设置"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/sixTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>