<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/navigation"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.5"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textIndex1"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text=" | "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textIndex2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/textIndex1"
        android:text="类型"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/title1"
        android:text="制剂类型显示:"
        android:textColor="@color/un_select_color"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/textIndex2"
        app:layout_constraintTop_toBottomOf="@id/textIndex2"
        android:layout_width="150dp"
        android:gravity="left"
        android:layout_height="30dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/typeRecyclerView"
        android:overScrollMode="never"
        app:layout_constraintStart_toEndOf="@id/title1"
        app:layout_constraintEnd_toEndOf="@id/add"
        app:layout_constraintTop_toTopOf="@id/title1"
        android:layout_width="0dp"
        android:layout_height="90dp">
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:id="@+id/title2"
        app:layout_constraintStart_toStartOf="@id/title1"
        app:layout_constraintTop_toBottomOf="@id/typeRecyclerView"
        android:text="可用试剂盒ID:"
        android:textColor="@color/un_select_color"
        android:gravity="left"
        android:textSize="18sp"
        android:layout_width="150dp"
        android:layout_height="30dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/deviceRecyclerView"
        android:overScrollMode="never"
        app:layout_constraintStart_toEndOf="@id/title2"
        app:layout_constraintEnd_toEndOf="@id/add"
        app:layout_constraintTop_toTopOf="@id/title2"
        android:layout_width="0dp"
        android:layout_height="60dp">
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:id="@+id/title3"
        app:layout_constraintStart_toStartOf="@id/title1"
        app:layout_constraintTop_toBottomOf="@id/deviceRecyclerView"
        android:text="可选结果类型:"
        android:textColor="@color/un_select_color"
        android:gravity="left"
        android:textSize="18sp"
        android:layout_width="150dp"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/resultRecyclerView"
        app:layout_constraintStart_toEndOf="@id/title3"
        app:layout_constraintEnd_toStartOf="@id/add"
        app:layout_constraintTop_toTopOf="@id/title3"
        android:layout_width="0dp"
        android:textSize="18sp"
        android:gravity="left|center_vertical"
        android:textColor="@color/white"
        android:text=" 阴性  阳性  弱阳性"
        android:layout_height="30dp">
    </TextView>

    <Button
        android:layout_marginEnd="40dp"
        android:id="@+id/add"
        app:layout_constraintTop_toTopOf="@id/resultRecyclerView"
        android:backgroundTint="#178FFF"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableLeft="@mipmap/ic_more"
        android:text="创建"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        app:layout_constraintTop_toBottomOf="@id/resultRecyclerView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/title1"
        app:layout_constraintEnd_toEndOf="@id/add"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>