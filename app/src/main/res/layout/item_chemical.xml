<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp"
    android:background="@color/navigation"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/delete"
        android:src="@mipmap/ic_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="26dp"
        android:layout_height="26dp"/>
    <TextView
        android:id="@+id/tv1"
        android:text="污点编号:"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/delete"
        app:layout_constraintBottom_toBottomOf="@id/delete"
        app:layout_constraintStart_toEndOf="@id/delete"
        android:textColor="@color/un_select_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:text="1001"
        android:inputType="number"
        android:gravity="center|left"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:id="@+id/taint_num"
        android:background="@drawable/item_raditation_bg"
        app:layout_constraintStart_toEndOf="@id/tv1"
        app:layout_constraintTop_toTopOf="@id/tv1"
        app:layout_constraintBottom_toBottomOf="@id/tv1"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:maxLines="1"
        android:layout_width="200dp"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/tv2"
        android:text="污点位置:"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/delete"
        app:layout_constraintStart_toEndOf="@id/delete"
        android:textColor="@color/un_select_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:text="1001"
        android:gravity="center|left"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:id="@+id/taint_loc"
        android:background="@drawable/item_raditation_bg"
        app:layout_constraintStart_toEndOf="@id/tv2"
        app:layout_constraintTop_toTopOf="@id/tv2"
        app:layout_constraintBottom_toBottomOf="@id/tv2"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:layout_width="200dp"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/tv3"
        android:text="模拟污点:"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        app:layout_constraintStart_toEndOf="@id/delete"
        android:textColor="@color/un_select_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        app:layout_constraintStart_toEndOf="@id/tv3"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/tv3"
        app:layout_constraintBottom_toBottomOf="@id/tv3"
        android:layout_width="200dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="30dp">
        <TextView
            android:textColor="@color/white"
            android:text="1001"
            android:gravity="center|left"
            android:paddingStart="10dp"
            android:textSize="18sp"
            android:paddingEnd="8dp"
            android:id="@+id/taint_sim"
            android:layout_weight="1.3"
            android:background="@drawable/item_raditation_bg"
            app:layout_constraintStart_toEndOf="@id/tv3"
            app:layout_constraintTop_toTopOf="@id/tv3"
            app:layout_constraintBottom_toBottomOf="@id/tv3"
            app:drawableRightCompat="@mipmap/ic_add"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            />
        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="1001"
            android:gravity="center|left"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:maxEms="3"
            android:maxLength="3"
            android:maxLines="1"
            android:paddingRight="10dp"
            android:id="@+id/taint_sim1"
            app:layout_constraintHorizontal_weight="10"
            android:layout_width="70dp"
            app:layout_constraintStart_toEndOf="@id/taint_sim"
            app:layout_constraintTop_toTopOf="@id/taint_sim"
            app:layout_constraintBottom_toBottomOf="@id/taint_sim"
            android:background="@drawable/item_raditation_bg"
            android:layout_height="30dp"/>
        <TextView
            android:text="米"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/tv4"
        android:text="制剂名称:"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        app:layout_constraintStart_toEndOf="@id/delete"
        android:textColor="@color/un_select_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/white"
        android:gravity="center|left"
        android:paddingStart="10dp"
        android:id="@+id/taint_dis"
        android:background="@drawable/item_raditation_bg"
        app:layout_constraintStart_toEndOf="@id/tv4"
        app:layout_constraintTop_toTopOf="@id/tv4"
        app:layout_constraintBottom_toBottomOf="@id/tv4"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        app:drawableRightCompat="@mipmap/ic_add"
        android:paddingRight="10dp"
        android:text="肝183"
        android:layout_width="200dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/tv5"
        android:text="中心峰值:"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv4"
        app:layout_constraintStart_toEndOf="@id/delete"
        android:textColor="@color/un_select_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        app:layout_constraintStart_toEndOf="@id/tv5"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/tv5"
        app:layout_constraintBottom_toBottomOf="@id/tv5"
        android:layout_width="200dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="30dp">

        <EditText
            android:text="120"
            android:paddingStart="10dp"
            android:gravity="center|left"
            android:textColor="@color/white"
            android:id="@+id/taint_max"
            android:maxEms="3"
            android:maxLength="3"
            android:maxLines="1"
            android:background="@drawable/item_raditation_bg"
            android:layout_width="70dp"
            android:layout_height="30dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/unit"
            android:gravity="center_vertical|left"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:text="uSv/h"
            android:maxLines="1"
            android:paddingEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/item_raditation_bg"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>