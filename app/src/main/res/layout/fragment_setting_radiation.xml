<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/navigation"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.5"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textIndex1"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text=" | "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textIndex2"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textIndex2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/layout1"
        android:text="单位及类型"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/layout1"
        app:layout_constraintTop_toBottomOf="@id/textIndex2"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#D1D1D0"
            android:id="@+id/textIndex3"
            android:textSize="18sp"
            android:text="检测类型选择: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/white"
            android:gravity="left|center_vertical"
            android:paddingStart="20dp"
            android:textSize="18sp"
            android:paddingEnd="8dp"
            android:id="@+id/measurement"
            android:text="剂量率"
            android:background="@drawable/item_raditation_bg"
            app:layout_constraintStart_toEndOf="@id/tv3"
            app:layout_constraintTop_toTopOf="@id/tv3"
            app:layout_constraintBottom_toBottomOf="@id/tv3"
            android:layout_width="200dp"
            android:layout_marginStart="20dp"
            android:layout_height="30dp"
            app:drawableRightCompat="@mipmap/ic_add" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/layout2"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/textIndex2"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#D1D1D0"
            android:id="@+id/textIndex4"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/textIndex2"
            app:layout_constraintStart_toStartOf="@id/guideline"
            android:text="辐射类型显示: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textIndex7"
            app:layout_constraintTop_toTopOf="@id/textIndex4"
            app:layout_constraintStart_toEndOf="@id/textIndex4"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text=" X射线，Y射线，B射线"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text=" | "
        android:id="@+id/textIndex5"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/layout1"
        app:layout_constraintTop_toBottomOf="@id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textIndex6"
        app:layout_constraintTop_toTopOf="@id/textIndex5"
        app:layout_constraintStart_toEndOf="@id/textIndex5"
        android:text="污点设置"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/add"
        app:layout_constraintTop_toTopOf="@id/textIndex5"
        android:backgroundTint="#178FFF"
        app:layout_constraintEnd_toEndOf="@id/layout2"
        android:drawableLeft="@mipmap/ic_more"
        android:text="创建"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/layout1"
        app:layout_constraintEnd_toEndOf="@id/add"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>