<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:padding="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv1"
            android:text="试剂盒ID: "
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/un_select_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/id"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:gravity="center|left"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:textColor="@color/color_37B48B"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/tv1"
            app:layout_constraintStart_toEndOf="@id/tv1"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintEnd_toStartOf="@id/icon"
            app:layout_constraintVertical_bias="0.6" />
        <ImageView
            android:id="@+id/icon"
            android:src="@mipmap/ic_delete"
            app:layout_constraintStart_toEndOf="@id/id"
            app:layout_constraintTop_toTopOf="@id/id"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/id"
            android:layout_width="22dp"
            android:layout_height="22dp"/>
        <TextView
            android:id="@+id/tv4"
            android:text="用于检测:"
            android:textSize="18sp"

            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            app:layout_constraintStart_toStartOf="@id/tv1"
            app:layout_constraintEnd_toEndOf="@id/tv1"
            android:layout_width="0dp"
            android:textColor="@color/un_select_color"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/white"
            android:gravity="center|left"
            android:paddingStart="10dp"
            android:id="@+id/whatFor"
            android:background="@drawable/item_raditation_bg"
            app:layout_constraintStart_toEndOf="@id/tv4"
            app:layout_constraintTop_toTopOf="@id/tv4"
            app:layout_constraintBottom_toBottomOf="@id/tv4"
            app:layout_constraintEnd_toEndOf="@id/icon"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tv5"
            android:text="检测结果:"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv4"
            app:layout_constraintStart_toStartOf="@id/tv4"
            android:textColor="@color/un_select_color"
            app:layout_constraintEnd_toEndOf="@id/tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/result"
            android:textColor="@color/white"
            android:gravity="center|left"
            android:paddingStart="10dp"
            android:background="@drawable/item_raditation_bg"
            app:layout_constraintStart_toEndOf="@id/tv5"
            app:layout_constraintTop_toTopOf="@id/tv5"
            app:layout_constraintBottom_toBottomOf="@id/tv5"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/icon"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tv6"
            android:text="取样位置:"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv5"
            app:layout_constraintStart_toStartOf="@id/tv5"
            android:textColor="@color/un_select_color"
            app:layout_constraintEnd_toEndOf="@id/tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/editText"
            android:textColor="@color/white"
            android:gravity="left|center_vertical"
            android:paddingStart="10dp"
            app:layout_constraintStart_toEndOf="@id/tv6"
            app:layout_constraintTop_toTopOf="@id/tv6"
            app:layout_constraintBottom_toBottomOf="@id/tv6"
            app:layout_constraintEnd_toEndOf="@id/icon"
            android:layout_marginStart="20dp"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_width="0dp"
            android:background="@drawable/item_raditation_bg"

            android:textSize="18sp"
            android:layout_height="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>