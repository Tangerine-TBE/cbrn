<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/navigation"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <TextView
        style="@style/textStyle"
        android:id="@+id/chart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/icon"
        app:layout_constraintHorizontal_weight="0.8"
        android:text="字符"
     />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/chart"
        app:layout_constraintEnd_toStartOf="@id/name"
        app:layout_constraintHorizontal_weight="0.5"
        android:id="@+id/icon"
        style="@style/textStyle"
        />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintEnd_toStartOf="@id/min"
        app:layout_constraintHorizontal_weight="1.5"
        android:id="@+id/name"
        style="@style/textStyle"
        android:text="制剂或化学品名称"
        />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/name"
        app:layout_constraintEnd_toStartOf="@id/mid"
        app:layout_constraintHorizontal_weight="0.8"
        android:id="@+id/min"
        style="@style/textStyle"
        android:text="报警下限"
        />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/min"
        app:layout_constraintEnd_toStartOf="@id/max"
        app:layout_constraintHorizontal_weight="0.8"
        android:id="@+id/mid"
        style="@style/textStyle"
        android:text="报警中限"
        />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/mid"
        app:layout_constraintEnd_toEndOf="@id/unit"
        app:layout_constraintHorizontal_weight="0.8"
        android:id="@+id/max"
        style="@style/textStyle"
        android:text="报警上限"
        />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/max"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.5"
        android:id="@+id/unit"
        style="@style/textStyle"
        android:text="单位"
        />

</androidx.constraintlayout.widget.ConstraintLayout>